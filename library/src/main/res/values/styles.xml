<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="button_no_shadow_style" parent="@style/Widget.AppCompat.Button.Borderless">

    </style>

    <declare-styleable name="decorate_view" tools:ignore="ResourceName">
        <attr name="layout_radius" format="reference|dimension" />
        <attr name="layout_src_radius" format="reference|dimension" />

        <attr name="layout_background_enableTrue" format="reference|color" />
        <attr name="layout_background_enableFalse" format="reference|color" />

        <attr name="layout_background_pressedTrue" format="reference|color" />
        <attr name="layout_background_pressedFalse" format="reference|color" />

        <attr name="layout_background_selectedTrue" format="reference|color" />
        <attr name="layout_background_selectedFalse" format="reference|color" />


        <attr name="layout_textColor_enableTrue" format="reference|color" />
        <attr name="layout_textColor_enableFalse" format="reference|color" />

        <attr name="layout_textColor_pressedTrue" format="reference|color" />
        <attr name="layout_textColor_pressedFalse" format="reference|color" />

        <attr name="layout_textColor_selectedTrue" format="reference|color" />
        <attr name="layout_textColor_selectedFalse" format="reference|color" />

        <attr name="layout_canScroll" format="reference|boolean" />


        <attr name="layout_border_color" format="reference|color" />
        <attr name="layout_border_width" format="reference|dimension" />

        <attr name="layout_dash_width" format="reference|dimension" />
        <attr name="layout_dash_height" format="reference|dimension" />
        <attr name="layout_dash_gap" format="reference|dimension" />

        <attr name="layout_cover_children" format="boolean" />
    </declare-styleable>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#327FC2</item>
        <item name="colorAccent">#FF5449</item>
    </style>

    <style name="StyleTitleText">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="SwitchButtonStyleMD">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="myDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="zxDialogStyle_TopAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/top_enter_anim_dialog</item>
        <item name="android:windowExitAnimation">@anim/top_exit_anim_dialog</item>
    </style>

    <style name="zxDialogStyle_BottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_enter_anim_dialog</item>
        <item name="android:windowExitAnimation">@anim/bottom_exit_anim_dialog</item>
    </style>

    <style name="zxDialogStyle_leftAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/left_enter_anim_dialog</item>
        <item name="android:windowExitAnimation">@anim/left_exit_anim_dialog</item>
    </style>

    <style name="zxDialogStyle_rightAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/right_enter_anim_dialog</item>
        <item name="android:windowExitAnimation">@anim/right_exit_anim_dialog</item>
    </style>

    <style name="ImagePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ImagePickerThemeFullScreen" parent="ImagePickerTheme">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!--SuperCheckbox的样式-->
    <style name="SuperCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_item_checked</item>
    </style>

    <style name="UpdateAppNumberProgressBar_Red">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#e94339</item>

        <item name="progress_text_size">12sp</item>
        <item name="progress_text_color">#e94339</item>

        <item name="progress_reached_bar_height">4dp</item>
        <item name="progress_unreached_bar_height">3dp</item>
    </style>
</resources>
