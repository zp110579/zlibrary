<?xml version="1.0" encoding="utf-8"?>
<com.zee.view.ZxLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ab000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    app:zv_radius="10dp">

    <ProgressBar
        android:id="@+id/proBar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#ffffff"
        android:indeterminateTintMode="src_atop" />

    <TextView
        android:id="@+id/tv_loading_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/zee_str_recyclerview_loading"
        android:textColor="#ffffff"
        android:textSize="14dp" />

</com.zee.view.ZxLinearLayout>