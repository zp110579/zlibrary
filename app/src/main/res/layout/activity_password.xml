<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zee.view.ZxPassWordLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:zv_box_input_color="#f00"
        app:zv_gap="15dp"
        app:zv_input_type="text"
        app:zv_rect_radius="6dp"
        app:zv_item_height="40dp"
        app:zv_item_width="40dp"
        app:zv_input_length="4"
        app:zv_textSize="15dp" />

    <com.zee.view.ZxPassWordLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:zv_box_input_color="#f00"
        app:zv_gap="15dp"
        app:zv_input_length="5"
        app:zv_input_box_type="circle"
        app:zv_rect_radius="6dp"
        app:zv_input_type="stars"
        app:zv_item_height="40dp"
        app:zv_item_width="40dp"
        app:zv_textSize="15dp" />

    <com.zee.view.ZxPassWordLayout
        android:layout_width="match_parent"
        app:zv_input_length="7"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:zv_box_input_color="#f00"
        app:zv_gap="15dp"
        app:zv_input_box_type="line"
        app:zv_rect_radius="6dp"
        app:zv_item_height="40dp"
        app:zv_item_width="40dp"
        app:zv_textSize="15dp" />
</LinearLayout>

