<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.zee.libs.example.ui.activitys.MainActivity">

    <com.zee.widget.BubbleSeekBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="100dp"
        app:bsb_max="300"
        app:bsb_min="1"
        app:bsb_onScrollview="false"
        app:bsb_progress="10"
        app:bsb_hide_bubble="true"
        app:bsb_always_show_bubble="false"
        app:bsb_second_track_color="@color/color_green"
        app:bsb_show_section_mark="true"
        app:bsb_track_color="@color/color_gray" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>
