<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <com.zee.view.ZxBottomBarLayout
        android:id="@+id/barLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <com.zee.view.ZxTextView
            android:id="@+id/tv_a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="FragmengA"
            android:textColor="#f00"
            app:zv_textSelectColor="#00f" />

        <com.zee.view.ZxTextView
            android:id="@+id/tv_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="FragmengA"
            android:textColor="#f00"
            app:zv_textSelectColor="#00f" />
    </com.zee.view.ZxBottomBarLayout>

    <RelativeLayout
        android:id="@+id/layout_relative"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.zee.view.ZxTextView
        android:id="@+id/tv_eventBus_a"
        style="@style/base_btn_style_visibility"
        android:layout_width="match_parent"
        android:text="发送消息A" />

    <com.zee.view.ZxTextView
        android:id="@+id/tv_eventBus_b"
        style="@style/base_btn_style_visibility"
        android:text="发送消息B" />

    <com.zee.view.ZxTextView
        android:id="@+id/tv_eventBus_c"
        style="@style/base_btn_style_visibility"
        android:text="发送消息C" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
